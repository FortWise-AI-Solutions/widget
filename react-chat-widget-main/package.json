{
  "name": "Alara-chat-widget",
  "version": "1.0.0",
  "description": "Universal chat widget built with React for easy CDN deployment",
  "main": "dist/loader.iife.js",
  "type": "module",
  "scripts": {
    "dev": "vite --host",
    "build": "vite build",
    "build:widget": "vite build --config vite.widget.config.ts",
    "build:loader": "vite build --config vite.loader.config.ts",
    "build:all": "npm run build:widget && npm run build:loader",
    "preview": "vite preview --host",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist node_modules/.vite",
    "serve": "npx http-server dist -p 8080 -c-1 --cors",
    "test:build": "npm run build && npm run serve",
    "analyze": "node scripts/analyze-bundle.js"
  },
  "keywords": [
    "chat",
    "widget",
    "react",
    "cdn",
    "customer-support",
    "typescript"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "add": "^2.0.6",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^5.5.0",
    "terser": "^5.43.1",
    "yarn": "^1.22.22"
  },
  "devDependencies": {
    "@types/node": "^24.3.0",
    "@types/react": "^19.1.12",
    "@types/react-dom": "^19.1.9",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "@vitejs/plugin-react": "^5.0.2",
    "autoprefixer": "^10.4.21",
    "eslint": "^8.56.0",
    "http-server": "^14.1.1",
    "postcss": "^8.5.6",
    "prettier": "^3.2.4",
    "rollup-plugin-visualizer": "^6.0.3",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.9.2",
    "vite": "^7.1.3"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ],
  "packageManager": "yarn@4.9.4"
}
